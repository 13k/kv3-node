{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "ts-node": { "files": true },
  "typedocOptions": {
    "entryPoints": ["src"],
    "exclude": ["**/index.ts"],
    "readme": "README.md",
    "out": "doc/api"
  }
}
